@model ApplicationCore.Models.FavoriteResponseModel
<!--List Model -->
<!--  Model = movieCards -->

@{
    ViewData["Title"] = "Favorited Movies";
}

<h1>Favorites</h1>

<div class="rounded">
    <div class="container-fluid">
        <div class="row">
            @foreach (var movieCard in Model.FavoriteMovies)
            {
            <div class="col-xl-2 col-sm-4 col-lg-3 col-6">
                <partial name="_movieCard" model="movieCard" />
                <div class="imgButton">
                    <a asp-controller="User" asp-action="Favorite" asp-route-movieId="@movieCard.Id" class="btn btn-secondary btn-lg">Favorites Details</a>

                </div>
            </div>
            }
        </div>
    </div>
</div>