@model ApplicationCore.Models.PurchaseResponseModel

@{
    ViewData["Title"] = "Purchased Movies";
}

<div class="rounded">
    <div class="container-fluid">
        <div class="row">
            @foreach (var movies in Model.PurchasedMovies)
            {
            <div class="col-xl-2 col-lg-3 col-sm-4 col-6">

                <partial name="_MovieCard" model="movies" />
                <div class="imgButton">
                    <a asp-controller="User" asp-action="PurchaseDetails" asp-route-movieId="@movies.Id" class="btn btn-secondary btn-lg">Purchase Details</a>

                </div>
            </div>

            }
        </div>
    </div>
</div>